#include <iostream>
#include <conio.h>
using namespace std;

int main()
{
    int mark;
    cout<<"Enter Your Mark: ";
    cin>>mark;
       if(mark>100)
    {
    cout<<"Invalid Marks,Please Enter Marks Between 1-100."<<endl;
    }
    else if(mark>=90)
    {
        cout<<"A+\n"<<"Congratulations"<<endl;
    }
    else if(mark>=85)
    {
    cout<<"A"<<endl;
    }

        else if(mark>=80)
    {
    cout<<"B+"<<endl;
    }

        else if(mark>=75)
    {
    cout<<"B"<<endl;
    }
      else if(mark>=70)
    {
    cout<<"C+"<<endl;
    }
      else if(mark>=65)
    {
    cout<<"C"<<endl;
    }    else if(mark>=60)
    {
    cout<<"D+"<<endl;
    }
     else if(mark>=50)
    {
    cout<<"D"<<endl;
    }
     else {
        cout<<"Fail\n"<<"Better Luck Next Time";
     }

    getch();
}
 
